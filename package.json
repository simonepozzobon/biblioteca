{
  "name": "biblioteca",
  "version": "1.0.0",
  "private": true,
  "description": "Client di consultazione per la Biblioteca di Morando di Fondazione Cineteca Italiana di Milano",
  "author": "Simone Pozzobon",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "electron:generate-icons": "electron-icon-builder --input=./public/icon.png --output=dist --flatten",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "production": "yarn build && yarn electron:generate-icons && yarn electron:build --mac --linux --win"
  },
  "main": "background.js",
  "dependencies": {
    "core-js": "^3.4.1",
    "element-ui": "^2.9.1",
    "tailwindcss": "^1.1.3",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.1",
    "dotenv": "^8.0.0",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "electron-icon-builder": "^1.0.0",
    "eslint": "^6.6.0",
    "eslint-plugin-vue": "^6.0.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-electron-builder": "^1.4.1",
    "vue-router": "^3.0.6",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
